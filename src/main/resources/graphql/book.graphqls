type Book {
	id: ID!
	title: String!
	description: String
	author: Author
}

extend type Query {
	findAllBooks: [Book]!
	findBookByID(id: ID!): Book!
}

extend type Mutation {
	createBook(title: String!, description: String!,author: ID!): Book!
	updateBook(id: ID!, title: String, description: String): Book!
	deleteBook(id: ID!): Boolean
}

